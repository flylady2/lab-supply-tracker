<h1>Welcome to the <%=@lab.principal_investigator%> Lab!</h1>

<h2><%=@lab.principal_investigator%> Lab members:</h2>
  <% @lab.users.each do |user| %>
    <ul>
      Name:<%= user.name %><br>
      Email:<%= user.email %>
    </ul>
  <% end %>


  <%= form_tag(lab_reagents_path(@lab), method: "get") do %>

  <%= label_tag(:name, "Enter the name of the reagent") %>
  <%= text_field_tag(:name) %>
  <%= submit_tag("Search") %>
  <% end %>

<%= link_to "Reagent Categories", categories_path %>

<%= link_to "Reagent Locations", lab_locations_path(@lab) %>

<%= link_to "Reagent Search", lab_reagents_search_path(@lab) %>


