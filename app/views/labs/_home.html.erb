<h1>Welcome to the <%=@lab.principal_investigator%> Lab!</h1>

<h2><%=@lab.principal_investigator%> Lab members:</h2>
  <% @lab.users.each do |user| %>
    <ul>
      Name:<%= user.name %><br>
      Email:<%= user.email %>
    </ul>
  <% end %>
  <br><br>
  <h2>Find reagents by category:</h2>
  <ul>
  <% category_array.each do |category| %>
    <li>
      <% @category = category %>
      <%= link_to @category.name, lab_category_path(@lab, @category) %>
      </li>
    <% end %>
    </ul>

  <br><br>

  <%= form_tag(lab_reagents_path(@lab), method: "get") do %>

  <h2><%= label_tag(:name, "Search for a reagent by name") %></h2>
  <%= text_field_tag(:name) %>
  <%= submit_tag("Search") %>
  <% end %>

<h2>See where reagents are located:</h2>
<%= link_to "Reagent Locations", lab_locations_path(@lab) %>


    <br><br>
  

    <%= link_to "Log out", logout_path, method: :delete %>
