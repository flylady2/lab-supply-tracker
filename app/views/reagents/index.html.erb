<% if flash[:message] %>
  <div class="message"><%=flash[:message] %></div>
<% end %>
  <ul>
    <% #byebug %>
    <% @reagents.each do |reagent| %>
      <li>
        <%= link_to reagent.name, reagent_path(reagent) %> <br>
      </li>
    <% end %>
  </ul>

  <% if @reagents == [] %>
    <%= "Sorry, #{@lab.principal_investigator} Lab does not have that reagent." %>
    <%= "Request Reagent:" %>
    <%= form_tag(lab_reagents_ask_path, method: "get") do %>

    <%= label_tag(:name, "Enter the name of the reagent") %>
    <%= text_field_tag(:name) %>
    <%= submit_tag("Request Reagent") %>
    <% end %>

  <% end %>
